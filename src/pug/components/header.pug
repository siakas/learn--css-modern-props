mixin header()
    nav.navbar(role="navigation", aria-label="main navigation")
        div.navbar-brand
            a.navbar-item(href="https://bulma.io", target="_blank")
                img(src="https://bulma.io/images/bulma-logo.png", width="112", height="28")
            a.navbar-burger(role="button", aria-label="menu", aria-expanded="false", data-target="navbarBasicExample")
                span(aria-hidden="true")
                span(aria-hidden="true")
                span(aria-hidden="true")
        div#navbarBasicExample.navbar-menu
            div.navbar-start
                a.navbar-item(href="/")
                    | Home
                a.navbar-item
                    | Documentation
                div.navbar-item.has-dropdown.is-hoverable
                    a.navbar-link
                        | More
                    div.navbar-dropdown
                        a.navbar-item
                            | About
                        a.navbar-item
                            | Jobs
                        a.navbar-item
                            | Contact
                        hr.navbar-divider
                        a.navbar-item
                            | Report an issue
            div.navbar-end
                div.navbar-item
                    div.buttons
                        a.button.is-primary
                            strong Sign up
                        a.button.is-light
                            | Log in
